# Production Environment Variables for Vercel Deployment
# Copy these to your Vercel dashboard environment variables

# üîê AUTHENTICATION (REQUIRED)
DESCOPE_PROJECT_ID=your_descope_project_id
DESCOPE_ACCESS_KEY=your_descope_access_key
DESCOPE_MANAGEMENT_KEY=your_descope_management_key

# ü§ñ AI SERVICES (REQUIRED)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# üìä JOB DATA (REQUIRED)
RAPIDAPI_KEY=your_rapidapi_key

# üóÑÔ∏è DATABASE (REQUIRED)
# Use MongoDB Atlas for production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-career-assistant

# üåê APPLICATION URLS (AUTO-SET BY VERCEL)
NEXT_PUBLIC_APP_URL=https://your-vercel-domain.vercel.app
NEXTAUTH_URL=https://your-vercel-domain.vercel.app
DESCOPE_FLOW_URL=https://your-vercel-domain.vercel.app

# üîë SECURITY
NEXTAUTH_SECRET=your_production_nextauth_secret_32_chars_min

# üìß EMAIL (OPTIONAL)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ‚öôÔ∏è FEATURE FLAGS
ENABLE_GITHUB_INTEGRATION=true
ENABLE_GOOGLE_CALENDAR_INTEGRATION=true
ENABLE_SLACK_INTEGRATION=true
ENABLE_PORTFOLIO_ANALYSIS=true
ENABLE_INTERVIEW_SCHEDULING=true
ENABLE_CAREER_NOTIFICATIONS=true

# üöÄ DEPLOYMENT FLAGS
NODE_ENV=production
SKIP_ENV_VALIDATION=true
VERCEL=1
