# Production Environment Variables Template
# Copy this to .env.production and fill in your values

# ===================================
# APPLICATION CONFIGURATION
# ===================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-production-domain.vercel.app
NEXT_PUBLIC_SITE_NAME="AI Career Assistant"

# ===================================
# DATABASE CONFIGURATION
# ===================================
# MongoDB Atlas production connection string
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/ai-career-assistant?retryWrites=true&w=majority
MONGODB_DB_NAME=ai-career-assistant

# ===================================
# AUTHENTICATION (DESCOPE)
# ===================================
NEXT_PUBLIC_DESCOPE_PROJECT_ID=your-production-project-id
DESCOPE_BASE_URL=https://api.descope.com
DESCOPE_MANAGEMENT_KEY=your-production-management-key

# ===================================
# AI SERVICES
# ===================================
# OpenAI API Configuration
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_ORG_ID=your-openai-org-id
OPENAI_MODEL=gpt-4-turbo-preview

# ===================================
# JOB BOARD APIS
# ===================================
# RapidAPI Configuration
RAPIDAPI_KEY=your-production-rapidapi-key
RAPIDAPI_HOST=jobs-api14.p.rapidapi.com

# Additional job board APIs
INDEED_API_KEY=your-indeed-api-key
LINKEDIN_API_KEY=your-linkedin-api-key

# ===================================
# EMAIL CONFIGURATION
# ===================================
# Gmail SMTP for password reset emails
GMAIL_USER=your-production-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password
EMAIL_FROM=noreply@your-domain.com

# ===================================
# RATE LIMITING & SECURITY
# ===================================
# Redis for rate limiting (optional)
REDIS_URL=redis://your-redis-instance:6379
REDIS_PASSWORD=your-redis-password

# JWT secrets for session management
JWT_SECRET=your-super-secure-jwt-secret-min-256-chars
ENCRYPTION_KEY=your-encryption-key-32-chars

# ===================================
# EXTERNAL SERVICES
# ===================================
# PDF Generation Service (if using external)
PDF_SERVICE_URL=https://your-pdf-service.com
PDF_SERVICE_KEY=your-pdf-service-key

# File storage (AWS S3, Cloudinary, etc.)
STORAGE_PROVIDER=cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===================================
# MONITORING & ANALYTICS
# ===================================
# Application monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# ===================================
# FEATURE FLAGS
# ===================================
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_PREMIUM_FEATURES=true
FEATURE_JOB_ALERTS=true

# ===================================
# PERFORMANCE & CACHING
# ===================================
# Cache TTL in seconds
CACHE_TTL_JOBS=3600
CACHE_TTL_AI_RESPONSES=1800
CACHE_TTL_USER_PROFILES=900

# API Rate limits
API_RATE_LIMIT_AI=30
API_RATE_LIMIT_JOBS=50
API_RATE_LIMIT_GENERAL=100

# ===================================
# DEPLOYMENT CONFIGURATION
# ===================================
# Vercel specific
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_TOKEN=your-vercel-token

# CI/CD
GITHUB_TOKEN=your-github-token

# ===================================
# SECURITY HEADERS
# ===================================
ALLOWED_ORIGINS=https://your-domain.com,https://your-subdomain.vercel.app
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CSP_REPORT_URI=https://your-domain.com/api/csp-report

# ===================================
# BACKUP & DISASTER RECOVERY
# ===================================
BACKUP_STORAGE_URL=s3://your-backup-bucket
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=console,file

# External logging service
LOGTAIL_TOKEN=your-logtail-token

# ===================================
# HEALTH CHECKS
# ===================================
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000
