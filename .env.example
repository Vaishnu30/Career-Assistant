# Environment Variables for AI Career Assistant - MCP Hackathon Compliant

# Descope Authentication & Outbound Apps (REQUIRED for MCP Hackathon)
DESCOPE_PROJECT_ID=your_descope_project_id_here
DESCOPE_ACCESS_KEY=your_descope_access_key_here
DESCOPE_MANAGEMENT_KEY=your_descope_management_key_here

# Descope Outbound App IDs (Configure in Descope Console)
DESCOPE_GITHUB_APP_ID=your_github_outbound_app_id
DESCOPE_GOOGLE_CALENDAR_APP_ID=your_google_calendar_outbound_app_id
DESCOPE_SLACK_APP_ID=your_slack_outbound_app_id

# External Service Configuration (Managed via Descope Outbound Apps)
# Note: Actual tokens are managed by Descope, these are for app registration only

# GitHub OAuth App (For Portfolio Analysis)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google Calendar API (For Interview Scheduling)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Slack Bot (For Career Notifications)
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret

# OpenAI Configuration (For AI Analysis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# RapidAPI Configuration (Job Data Source)
RAPIDAPI_KEY=your_rapidapi_key_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai-career-assistant
# Alternative: MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-career-assistant

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
DESCOPE_FLOW_URL=https://your-descope-flow.vercel.app

# API Configuration
API_BASE_URL=http://localhost:3000/api

# Feature Flags
ENABLE_GITHUB_INTEGRATION=true
ENABLE_GOOGLE_CALENDAR_INTEGRATION=true
ENABLE_SLACK_INTEGRATION=true
ENABLE_PORTFOLIO_ANALYSIS=true
ENABLE_INTERVIEW_SCHEDULING=true
ENABLE_CAREER_NOTIFICATIONS=true
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt

# PDF Generation
PDF_OUTPUT_DIR=./public/generated-resumes
TEMP_DIR=./temp

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
